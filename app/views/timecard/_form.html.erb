<%= form_tag("/timecard/scan") do |f| %>
  <%= hidden_field_tag "idm", @idm %>
  <%= hidden_field_tag "kind", @kind %>

  <div class="field">
    名前：<br />
    <%= text_field_tag "name", @name, {:style => 'width: 10em;', :maxlength => '50'} %>
    <p style="font-size: 0.5em;">idm:<%= @idm %></p>
  </div>

  <div class="actions">
    <%= submit_tag "登録" %>
  </div>
<% end %>
